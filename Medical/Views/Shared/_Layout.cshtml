@{
    var active = ViewBag.ActiveMenu as string ?? string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FormBuilder</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />

    <style>
        :root {
            --primary-600: #1F6DFF;
            --primary-100: #E8F0FF;
            --gray-50: #F9FAFB;
            --gray-100: #EAECF0;
            --gray-600: #475467;
            --radius-lg: 16px;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--gray-50);
        }

        /* SIDEBAR */
        .sidebar {
            width: 250px;
            height: 100vh;
            padding-top: 25px;
            background: white;
            border-right: 1px solid var(--gray-100);
            position: fixed;
            left: 0;
            top: 0;
            overflow-y: auto;
        }

            .sidebar a {
                display: block;
                padding: 12px 25px;
                font-size: 15px;
                font-weight: 500;
                text-decoration: none;
                color: var(--gray-600);
                border-left: 4px solid transparent;
            }

                .sidebar a.active {
                    background: var(--primary-100);
                    border-left-color: var(--primary-600);
                    color: var(--primary-600);
                }

        .content-area {
            margin-left: 260px;
            padding: 25px;
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <!-- SIDEBAR -->
    <div class="sidebar d-flex flex-column justify-content-between">

        <!-- TOP MENU ITEMS -->
        <div>
            <h4 class="fw-bold px-4 mb-4" style="color: var(--primary-600)">FormBuilder</h4>

            <a href="/Dashboard" class="@(active == "Dashboard" ? "active" : "")">
                Dashboard
            </a>

            <a href="/FormOverview" class="@(active == "FormOverview" ? "active" : "")">
                Form Overview
            </a>

            <a href="/ViewPublicForms/Create" class="@(active == "FormBuilder" ? "active" : "")">
                Form Builder
            </a>

            <a href="/FieldEditor" class="@(active == "FieldEditor" ? "active" : "")">
                Field Editor
            </a>

            <a href="/LogicBuilder" class="@(active == "LogicBuilder" ? "active" : "")">
                Logic Builder
            </a>

            <a href="/ViewPublicForms/Index" class="@(active == "Submissions" ? "active" : "")">
                Submissions
            </a>
        </div>

        <!-- BOTTOM MENU ITEM -->
        <div class="mt-auto mb-4">
            <a href="/ViewPublicForms/Create" class="@(active == "PublicForm" ? "active" : "")" style="font-size:15px;">
                📄 View Public Form
            </a>
        </div>

    </div>



    <!-- MAIN CONTENT -->
    <div class="content-area">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </div>

</body>
</html>
