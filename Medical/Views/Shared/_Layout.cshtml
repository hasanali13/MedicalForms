@{
    var active = ViewBag.ActiveMenu as string ?? string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Origin Software's FormBuilder</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
    <link rel="stylesheet" href="~/css/formbuilder-toasts.css" />

    <style>
        :root {
            --primary-600: #1F6DFF;
            --primary-100: #E8F0FF;
            --gray-50: #F9FAFB;
            --gray-100: #EAECF0;
            --gray-600: #475467;
            --radius-lg: 16px;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--gray-50);
        }

        /* SIDEBAR */
        .sidebar {
            width: 250px;
            height: 100vh;
            padding-top: 25px;
            background: white;
            border-right: 1px solid var(--gray-100);
            position: fixed;
            left: 0;
            top: 0;
            overflow-y: auto;
        }

            .sidebar a {
                display: block;
                padding: 12px 25px;
                font-size: 15px;
                font-weight: 500;
                text-decoration: none;
                color: var(--gray-600);
                border-left: 4px solid transparent;
            }

                .sidebar a.active {
                    background: var(--primary-100);
                    border-left-color: var(--primary-600);
                    color: var(--primary-600);
                }

        .content-area {
            margin-left: 260px;
            padding: 25px;
        }

        .app-footer {
            position: fixed;
            bottom: 12px;
            right: 20px;
            font-size: 12px;
            color: #98A2B3;
            background: transparent;
            z-index: 1000;
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <!-- SIDEBAR -->
    <div class="sidebar d-flex flex-column justify-content-between">

        <!-- TOP MENU ITEMS -->
        <div>
            <h4 class="fw-bold px-2 mb-2" style="color: var(--primary-600)">Origin Software's FormBuilder</h4>

            <a asp-controller="ViewPublicForms" asp-action="Dashboard" class="@(active == "Dashboard" ? "active" : "")">
                Dashboard
            </a>

            <a href="/FormOverview" class="@(active == "FormOverview" ? "active" : "")">
                Form Overview
            </a>

            <a href="/ViewPublicForms/Create" class="@(active == "FormBuilder" ? "active" : "")">
                Form Builder
            </a>

            <a href="/FieldEditor" class="@(active == "FieldEditor" ? "active" : "")">
                Field Editor
            </a>

            <a href="/LogicBuilder" class="@(active == "LogicBuilder" ? "active" : "")">
                Logic Builder
            </a>

            <a href="/ViewPublicForms/Index" class="@(active == "Submissions" ? "active" : "")">
                Submissions
            </a>
        </div>

        <!-- BOTTOM MENU ITEM -->
        <div class="mt-auto mb-4">
            <a href="/ViewPublicForms/FillForm" class="@(active == "PublicForm" ? "active" : "")" style="font-size:15px;">
                📄 View Public Form
            </a>
        </div>
        <div class="px-4 pb-3 text-center" style="font-size:12px; color:#98A2B3;">
            © @DateTime.Now.Year <strong>Origin Softwares</strong><br />
            All rights reserved.
        </div>

    </div>




    <!-- MAIN CONTENT -->
    <div class="content-area">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </div>

    <div id="toastContainer"></div>
    <script>
        window.showToast = function(message, type) {
            var container = document.getElementById('toastContainer');
            if (!container) return;
            var toast = document.createElement('div');
            toast.className = 'toast ' + (type || 'success');
            toast.setAttribute('role', 'status');
            toast.setAttribute('aria-live', 'polite');
            var icon = document.createElement('span');
            icon.setAttribute('aria-hidden', 'true');
            icon.style.fontSize = '16px';
            icon.textContent = type === 'success' ? '✅' : type === 'error' ? '❌' : 'ℹ️';
            var msg = document.createElement('span');
            msg.textContent = message;
            var closeBtn = document.createElement('button');
            closeBtn.type = 'button';
            closeBtn.className = 'btn btn-sm btn-light';
            closeBtn.style.marginLeft = 'auto';
            closeBtn.style.background = 'transparent';
            closeBtn.style.border = 'none';
            closeBtn.style.color = 'inherit';
            closeBtn.style.cursor = 'pointer';
            closeBtn.innerHTML = '&times;';
            closeBtn.onclick = function() {
                removeToast(toast);
            };
            toast.appendChild(icon);
            toast.appendChild(msg);
            toast.appendChild(closeBtn);
            container.appendChild(toast);
            requestAnimationFrame(function() {
                toast.classList.add('show');
            });
            setTimeout(function() {
                removeToast(toast);
            }, 3000);
        };
        function removeToast(toast) {
            if (!toast.parentNode) return;
            toast.style.opacity = '0';
            toast.style.transform = 'translateX(100%)';
            setTimeout(function() {
                if (toast.parentNode) toast.remove();
            }, 300);
        }
        document.addEventListener('DOMContentLoaded', function() {
            var successMsg = '@TempData["SuccessMessage"]';
            var errorMsg = '@TempData["ErrorMessage"]';
            if (successMsg) showToast(successMsg, 'success');
            if (errorMsg) showToast(errorMsg, 'error');
        });
    </script>
</body>
</html>
