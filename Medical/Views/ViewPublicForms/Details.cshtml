@model Medical.Models.ViewPublicForm
@{
    ViewData["Title"] = "Form Submission Details";
    ViewBag.ActiveMenu = "ViewForms";

    var additionalFieldsData = ViewBag.AdditionalFieldsData as Dictionary<string, Medical.Controllers.AdditionalFieldValue>
        ?? new Dictionary<string, Medical.Controllers.AdditionalFieldValue>();
    
    var customSteps = ViewBag.CustomSteps as List<Medical.Models.AdditionalField> ?? new List<Medical.Models.AdditionalField>();
    
    // Get all unique step numbers from additional fields data
    var allSteps = additionalFieldsData.Values
        .GroupBy(f => f.Step)
        .OrderBy(g => g.Key)
        .Select(g => g.Key)
        .ToList();
    
    // Include all steps 1-3 and any custom steps
    var displaySteps = new List<int> { 1, 2, 3 };
    displaySteps.AddRange(allSteps.Where(s => s > 3));
    displaySteps = displaySteps.Distinct().OrderBy(s => s).ToList();
}

<style>
    .field-card {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        background: #f8f9fa;
    }

    .field-section {
        margin-bottom: 30px;
    }

    .field-section-title {
        border-bottom: 2px solid #1F6DFF;
        padding-bottom: 10px;
        margin-bottom: 20px;
        color: #1F2937;
        font-weight: 600;
    }

    .field-row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 15px;
        padding: 10px;
        background: white;
        border-radius: 6px;
        border-left: 4px solid #1F6DFF;
    }

    .field-label {
        flex: 0 0 200px;
        font-weight: 600;
        color: #374151;
        padding-right: 15px;
    }

    .field-value {
        flex: 1;
        color: #4B5563;
    }

    .empty-field {
        color: #9CA3AF;
        font-style: italic;
    }

    .badge-step {
        background: #1F6DFF;
        color: white;
        padding: 3px 8px;
        border-radius: 12px;
        font-size: 12px;
        margin-left: 8px;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Form Submission Details</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-file-medical me-2"></i>
                Medical Form Submission
                <small class="float-end">Submitted: @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
            </h5>
        </div>

        <div class="card-body">
            <!-- Dynamically render all steps -->
            @foreach (var stepNum in displaySteps)
            {
                var stepTitle = GetStepTitle(stepNum);
                var stepFields = GetStepFields(stepNum, Model);
                var additionalFields = additionalFieldsData.Values.Where(f => f.Step == stepNum).ToList();
                
                <div class="field-section">
                    <h4 class="field-section-title">
                        Step @stepNum: @stepTitle
                        <span class="badge-step">Step @stepNum</span>
                    </h4>

                    <div class="row">
                        <!-- Original Fields for Steps 1-3 -->
                        @foreach (var field in stepFields)
                        {
                            <div class="col-md-6">
                                <div class="field-row">
                                    <div class="field-label">@field.Key</div>
                                    <div class="field-value">
                                        @if (!string.IsNullOrEmpty(field.Value))
                                        {
                                            @field.Value
                                        }
                                        else
                                        {
                                            <span class="empty-field">Not provided</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Additional Fields for all steps -->
                        @foreach (var field in additionalFields)
                        {
                            <div class="col-md-6">
                                <div class="field-row">
                                    <div class="field-label">
                                        @field.DisplayName
                                        <small class="text-muted d-block">@field.FieldType</small>
                                    </div>
                                    <div class="field-value">
                                        @if (!string.IsNullOrEmpty(field.Value))
                                        {
                                            if (field.FieldType.ToLower() == "checkbox")
                                            {
                                                @(field.Value == "true" ? "? Yes" : "? No")
                                            }
                                            else if (field.FieldType.ToLower() == "date" && DateTime.TryParse(field.Value, out DateTime dateValue))
                                            {
                                                @dateValue.ToString("yyyy-MM-dd")
                                            }
                                            else if (field.FieldType.ToLower() == "textarea")
                                            {
                                                <div style="white-space: pre-line">@field.Value</div>
                                            }
                                            else
                                            {
                                                @field.Value
                                            }
                                        }
                                        else
                                        {
                                            <span class="empty-field">Not provided</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Summary Section -->
            <div class="field-section">
                <h4 class="field-section-title">Submission Summary</h4>

                <div class="row">
                    <div class="col-md-4">
                        <div class="field-card">
                            <h6><i class="fas fa-user me-2"></i>Personal Info</h6>
                            <div class="mb-2">
                                <small>Fields: 4</small>
                            </div>
                            <div class="mb-2">
                                <small>Additional: @additionalFieldsData.Values.Count(f => f.Step == 1)</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="field-card">
                            <h6><i class="fas fa-heartbeat me-2"></i>Health Details</h6>
                            <div class="mb-2">
                                <small>Fields: 5</small>
                            </div>
                            <div class="mb-2">
                                <small>Additional: @additionalFieldsData.Values.Count(f => f.Step == 2)</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="field-card">
                            <h6><i class="fas fa-phone-alt me-2"></i>Emergency Contact</h6>
                            <div class="mb-2">
                                <small>Fields: @(Model.HasAlternativeContact.HasValue && Model.HasAlternativeContact.Value ? "6" : "4")</small>
                            </div>
                            <div class="mb-2">
                                <small>Additional: @additionalFieldsData.Values.Count(f => f.Step == 3)</small>
                            </div>
                        </div>
                    </div>

                    @foreach (var stepNum in displaySteps.Where(s => s > 3))
                    {
                        var customStep = customSteps.FirstOrDefault(cs => cs.Step == stepNum);
                        var customStepTitle = customStep?.DisplayName ?? $"Step {stepNum}";
                        var fieldCount = additionalFieldsData.Values.Count(f => f.Step == stepNum);
                        
                        <div class="col-md-4">
                            <div class="field-card">
                                <h6><i class="fas fa-list me-2"></i>@customStepTitle</h6>
                                <div class="mb-2">
                                    <small>Fields: @fieldCount</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Debug Information (Collapsible) -->
            @if (!string.IsNullOrEmpty(Model.AdditionalFieldsJson))
            {
                <div class="mt-4">
                    <div class="accordion" id="debugAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#debugCollapse">
                                    <i class="fas fa-code me-2"></i>Technical Details (JSON Data)
                                </button>
                            </h2>
                            <div id="debugCollapse" class="accordion-collapse collapse" data-bs-parent="#debugAccordion">
                                <div class="accordion-body">
                                    <div class="alert alert-info">
                                        <small><strong>Form ID:</strong> @Model.ViewPublicFormId</small><br>
                                        <small><strong>Form Version:</strong> @Model.FormVersion</small><br>
                                        <small><strong>Total Additional Fields:</strong> @additionalFieldsData.Count</small>
                                    </div>
                                    <h6>Raw JSON Data:</h6>
                                    <pre class="bg-dark text-light p-3 rounded" style="max-height: 300px; overflow-y: auto; font-size: 12px;">@Model.AdditionalFieldsJson</pre>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="text-muted">
                        <i class="fas fa-database me-1"></i>
                        Form ID: @Model.ViewPublicFormId.ToString().Substring(0, 8)...
                    </span>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                    @if (Model.IsDeleted.HasValue && Model.IsDeleted.Value)
                    {
                        <span class="badge bg-danger">Deleted</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Details page loaded');
        });
    </script>
}

@functions {
    private string GetStepTitle(int step)
    {
        switch (step)
        {
            case 1: return "Personal Information";
            case 2: return "Health Details";
            case 3: return "Emergency Contact";
            default: return "Step " + step;
        }
    }

    private IEnumerable<KeyValuePair<string, string>> GetStepFields(int step, Medical.Models.ViewPublicForm model)
    {
        switch (step)
        {
            case 1:
                return new List<KeyValuePair<string, string>>
                {
                    new KeyValuePair<string, string>("Full Name", model.FullName),
                    new KeyValuePair<string, string>("Age", model.Age.HasValue ? model.Age.Value.ToString() : ""),
                    new KeyValuePair<string, string>("Gender", model.Gender),
                    new KeyValuePair<string, string>("Date of Birth", model.DateOfBirth.HasValue ? model.DateOfBirth.Value.ToString("yyyy-MM-dd") : ""),
                };
            case 2:
                return new List<KeyValuePair<string, string>>
                {
                    new KeyValuePair<string, string>("Has Allergies", model.HasAllergies.HasValue ? (model.HasAllergies.Value ? "Yes" : "No") : ""),
                    new KeyValuePair<string, string>("Allergy Description", model.AllergyDescription),
                    new KeyValuePair<string, string>("Current Medication", model.CurrentMedication),
                    new KeyValuePair<string, string>("Height (cm)", model.HeightCm.HasValue ? model.HeightCm.Value.ToString("0.##") : ""),
                    new KeyValuePair<string, string>("Weight (kg)", model.WeightKg.HasValue ? model.WeightKg.Value.ToString("0.##") : ""),
                };
            case 3:
                return new List<KeyValuePair<string, string>>
                {
                    new KeyValuePair<string, string>("Contact Name", model.ContactName),
                    new KeyValuePair<string, string>("Relationship", model.Relationship),
                    new KeyValuePair<string, string>("Phone Number", model.PhoneNumber),
                    new KeyValuePair<string, string>("Has Alternative Contact", model.HasAlternativeContact.HasValue ? (model.HasAlternativeContact.Value ? "Yes" : "No") : ""),
                    new KeyValuePair<string, string>("Alternative Contact Name", model.HasAlternativeContact.HasValue && model.HasAlternativeContact.Value ? model.AltContactName : ""),
                    new KeyValuePair<string, string>("Alternative Phone Number", model.HasAlternativeContact.HasValue && model.HasAlternativeContact.Value ? model.AltPhoneNumber : ""),
                };
            default:
                // Custom steps don't have original fields
                return Enumerable.Empty<KeyValuePair<string, string>>();
        }
    }
}
