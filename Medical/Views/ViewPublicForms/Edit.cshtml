@model Medical.Models.ViewPublicForm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ViewPublicForm</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            This form uses dynamic JSON storage. To edit submission data, please modify the FormDataJson field or use the Details view.
        </div>
        
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViewPublicFormId" />
            
            <div class="form-group">
                <label class="control-label">Form ID</label>
                <input value="@Model.ViewPublicFormId" class="form-control" disabled />
            </div>
            
            <div class="form-group">
                <label class="control-label">Created At</label>
                <input value="@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control" disabled />
            </div>
            
            <div class="form-group">
                <label class="control-label">Form Version</label>
                <input asp-for="FormVersion" class="form-control" />
            </div>
            
            <div class="form-group">
                <label class="control-label">Is Deleted</label>
                <select asp-for="IsDeleted" class="form-control">
                    <option value="">Active</option>
                    <option value="true">Deleted</option>
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
