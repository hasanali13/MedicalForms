@{
    ViewData["Title"] = "Form Submitted Successfully";
    Layout = "_PublicLayout";
    ViewBag.ActiveMenu = "FormBuilder";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card border-success">
                <div class="card-body">
                    <div class="mb-4">
                        <div class="success-icon">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h1 class="card-title text-success mt-4">Success!</h1>
                        <h3 class="text-muted">Form Submitted Successfully</h3>
                    </div>

                    <div class="alert alert-success mb-4">
                        <i class="bi bi-info-circle"></i>
                        Your medical form has been submitted successfully. Our team will review it shortly.
                    </div>

                    <div class="mb-4">
                        <p class="lead">
                            Thank you for submitting your medical information.
                            A confirmation email has been sent to your registered email address.
                        </p>
                        <p class="text-muted">
                            Reference ID: <strong>@ViewBag.ReferenceId</strong>
                        </p>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-center">
                        <a asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle"></i> Submit Another Form
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-list-ul"></i> View All Submissions
                        </a>
                    </div>

                    <div class="mt-5">
                        <h5>What happens next?</h5>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <div class="step-card">
                                    <div class="step-number">1</div>
                                    <h6>Review</h6>
                                    <p>Our medical team will review your submission</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="step-card">
                                    <div class="step-number">2</div>
                                    <h6>Contact</h6>
                                    <p>We'll contact you if additional information is needed</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="step-card">
                                    <div class="step-number">3</div>
                                    <h6>Confirmation</h6>
                                    <p>You'll receive a final confirmation within 24-48 hours</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .success-icon {
        animation: bounce 1s ease-in-out;
    }

    .step-card {
        padding: 20px;
        border-radius: 10px;
        background: #f8f9fa;
        height: 100%;
    }

    .step-number {
        width: 40px;
        height: 40px;
        background: #1F6DFF;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin: 0 auto 15px;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-20px);
        }

        60% {
            transform: translateY(-10px);
        }
    }
</style>